<%= form_for @leftover, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :serving_size, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :serving_size, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :expires_at, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :expires_at, :class => 'datetime_select' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                leftovers_path, :class => 'btn' %>
  </div>
<% end %>
