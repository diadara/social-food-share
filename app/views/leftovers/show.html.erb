<%- model_class = Leftover -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @leftover.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:serving_size) %>:</strong></dt>
  <dd><%= @leftover.serving_size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= link_to @leftover.user.name, user_url(@leftover.user) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:expires_at) %>:</strong></dt>
  <dd><%= @leftover.expires_at %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              leftovers_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_leftover_path(@leftover), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              leftover_path(@leftover),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
