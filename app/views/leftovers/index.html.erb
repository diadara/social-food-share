<%- model_class = Leftover -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:serving_size) %></th>
      <th><%= model_class.human_attribute_name(:user) %></th>
      <th><%= model_class.human_attribute_name(:expires_at) %></th>
      <th>Longitude, Lattitude</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @leftovers.each do |leftover| %>
      <tr>
        <td><%= link_to leftover.id, leftover_path(leftover) %></td>
        <td><%= leftover.name %></td>
        <td><%= leftover.serving_size %></td>
        <td><%= link_to leftover.user.name, user_path(leftover.user) %></td>
        <td><%= leftover.expires_at %></td>
        <td><%= leftover.user.longitude.to_s + ", " + leftover.user.lattitude.to_s %></td>
        <td>
        	<%= link_to 'Show', leftover_path(leftover), :class => 'btn btn-mini btn-info' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_leftover_path(leftover), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      leftover_path(leftover),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_leftover_path,
            :class => 'btn btn-primary' %>
